@{
    Layout.Title = T("Add New Custom Sort Order").Text;
}

@using (Html.BeginFormAntiForgeryPost()) {
    @Html.ValidationSummary()
    <fieldset>
        <label for="@Html.Id("Name")">@T("Display Name")</label>
        @Html.TextBox("Name", "", new { @class = "text medium", autofocus = "autofocus" })
        <span class="hint">@T("Name of the custom sort order as it will be displayed in the admin.")</span>
    </fieldset>
    <fieldset>
        <button class="primaryAction" type="submit">@T("Save")</button>
    </fieldset>
}
